<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BioSystems.RegisterPage"
             Title="Cadastro">

    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Cadastrar-se" FontSize="32" HorizontalOptions="Center"/>

		<Entry x:Name="entryName" Placeholder="Nome" Keyboard="Text"/>
		<Entry x:Name="entryEmail" Placeholder="Email" Keyboard="Email"/>
        <Entry x:Name="entryPassword" Placeholder="Senha" IsPassword="True"/>

        <Button Text="Cadastrar" Clicked="onRegisterClicked"/>
        <Button Text="Fazer Login" Clicked="onLoginClicked"/>
    </VerticalStackLayout>

</ContentPage>
