<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BioSystems.OnBoardingPage">

    <CarouselView x:Name="carouselView" CurrentItemChanged="CarouselView_CurrentItemChanged">
        <CarouselView.ItemsSource>
            <x:Array Type="{x:Type x:String}">
				<x:String>iniciando1.jpg</x:String>
				<x:String>iniciando2.jpg</x:String>
				<x:String>iniciando3.jpg</x:String>
            </x:Array>
        </CarouselView.ItemsSource>
        <CarouselView.ItemTemplate>
            <DataTemplate>
				<VerticalStackLayout BackgroundColor="green" Padding="10">
					<Image Source="{Binding .}" />
				</VerticalStackLayout>
            </DataTemplate>
        </CarouselView.ItemTemplate>
    </CarouselView>
</ContentPage>
