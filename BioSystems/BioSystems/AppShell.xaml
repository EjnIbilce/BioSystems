<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BioSystems.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BioSystems.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="BioSystems">

    <ShellItem Title="Main">
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
        <ShellContent ContentTemplate="{DataTemplate local:LoginPage}" Route="LoginPage" />
        <ShellContent ContentTemplate="{DataTemplate local:IntroScreenView}" Route="IntroScreenView" />
        <ShellContent ContentTemplate="{DataTemplate local:RegisterPage}" Route="RegisterPage" />
        <ShellContent ContentTemplate="{DataTemplate local:UserConfigView}" Route="UserConfigView" />
        <ShellContent ContentTemplate="{DataTemplate local:Categories}" Route="Categories" />
    </ShellItem>
</Shell>
