<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BioSystems.Views.MainPage">

    <ScrollView>
        <VerticalStackLayout Margin="0,0,0,10">
            <HorizontalStackLayout Padding="20" BackgroundColor="LightGray">
                <Button Clicked="ClickedUserConfig" Text="Configuração" FontSize="12" />
                <VerticalStackLayout Margin="10,0,0,0">
                    <Label Text="Bem vindo!" FontSize="18" TextColor="{StaticResource PrimaryDark}" FontAttributes="Bold"></Label>
                    <Label x:Name="userName"></Label>
                </VerticalStackLayout>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
