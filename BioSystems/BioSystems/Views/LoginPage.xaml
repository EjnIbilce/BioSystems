<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BioSystems.Views.LoginPage"
             Title="Login">

    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Login" FontSize="32" HorizontalOptions="Center"/>

        <Entry x:Name="entryEmail" Placeholder="Email" Keyboard="Email"/>
        <Entry x:Name="entryPassword" Placeholder="Senha" IsPassword="True"/>

        <Button Text="Login" Clicked="onLoginClicked"/>
        <Button Text="Fazer cadastro" Clicked="onRegisterClicked"/>
    </VerticalStackLayout>

</ContentPage>
