<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Primary Colors -->
    <Color x:Key="Primary">#218c37</Color>
    <!-- Dark Green -->
    <Color x:Key="PrimaryLight">#a4d0ad</Color>
    <!-- Light Green -->
    <Color x:Key="PrimaryMedium">#77b584</Color>
    <!-- Medium Green -->
    <Color x:Key="PrimaryDark">#16682a</Color>
    <!-- Darker Green -->
    <Color x:Key="PrimaryMagenta">#16682a</Color>
    <!-- Adjusted to match the UI -->

    <!-- Secondary Colors -->
    <Color x:Key="Secondary">#f2f6f5</Color>
    <!-- Very Light Greenish -->
    <Color x:Key="SecondaryDark">#e0eae7</Color>
    <!-- Slightly Darker Secondary -->
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="SecondaryBlack">#000000</Color>
    <!-- Black for Contrast -->
    <Color x:Key="Cinzinha">#f5f9f8</Color>

    <!-- Background and Text Colors -->
    <Color x:Key="White">#ffffff</Color>
    <Color x:Key="LightGray">#e9edec</Color>
    <Color x:Key="VeryLightGray">#ebeeee</Color>
    <Color x:Key="GrayText">#6b6b6b</Color>
    <!-- Adjusted for readable text -->

    <!-- Accent Colors -->
    <Color x:Key="AccentYellow">#fdd835</Color>
    <!-- Yellow Accent -->
    <Color x:Key="AccentBlue">#2196f3</Color>
    <!-- Blue Accent -->

    <!-- SolidColorBrushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLight}"/>
    <SolidColorBrush x:Key="PrimaryMediumBrush" Color="{StaticResource PrimaryMedium}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDark}"/>

    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="LightGrayBrush" Color="{StaticResource LightGray}"/>
    <SolidColorBrush x:Key="VeryLightGrayBrush" Color="{StaticResource VeryLightGray}"/>
    <SolidColorBrush x:Key="GrayTextBrush" Color="{StaticResource GrayText}"/>

    <SolidColorBrush x:Key="AccentYellowBrush" Color="{StaticResource AccentYellow}"/>
    <SolidColorBrush x:Key="AccentBlueBrush" Color="{StaticResource AccentBlue}"/>
</ResourceDictionary>
